<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar.WithBackIcon"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/red_packet"
        app:title="Send Red Packget" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            app:columnCount="2">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Wallet" />

            <Spinner
                android:id="@+id/wallet_spinner"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                tools:listitem="@android:layout/simple_list_item_1" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Amount" />

            <EditText
                android:hint="ETH"
                android:id="@+id/amount_input"
                android:layout_margin="4dp"
                android:inputType="numberDecimal"
                app:layout_columnWeight="1" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Split"
                android:visibility="gone" />

            <RadioGroup
                android:visibility="gone"
                app:layout_columnWeight="1">

                <RadioButton
                    android:id="@+id/split_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Average" />

                <RadioButton
                    android:id="@+id/split_random"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Random" />
            </RadioGroup>

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Shares" />

            <EditText
                android:hint="People"
                android:id="@+id/shares_input"
                android:layout_margin="4dp"
                android:digits="0123456789"
                android:inputType="number"
                app:layout_columnWeight="1" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Send as" />

            <Spinner
                android:id="@+id/sender_spinner"
                app:layout_columnWeight="1"
                tools:listitem="@layout/item_message_contact" />

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>