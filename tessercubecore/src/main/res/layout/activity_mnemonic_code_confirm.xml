<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wallet.MnemonicCodeConfirmActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Confirm Backup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ToolBar.WithBackIcon"/>

    <TextView
        android:id="@+id/confirm_desc"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:text="Tap in correct order to confirm backup"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:id="@+id/result_recycler_view_container"
        app:layout_constraintTop_toBottomOf="@id/confirm_desc"
        android:layout_width="match_parent"
        android:layout_height="184dp" >
        <androidx.recyclerview.widget.RecyclerView
            android:padding="6dp"
            android:id="@+id/result_recycler_view"
            tools:itemCount="12"
            tools:listitem="@layout/item_mnemonic_code"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:layout_width="match_parent"
            android:layout_height="186dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/result_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="184dp">
        <androidx.recyclerview.widget.RecyclerView
            android:padding="6dp"
            android:id="@+id/tap_recycler_view"
            tools:itemCount="12"
            tools:listitem="@layout/item_mnemonic_code"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/confirm_button"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        android:text="@string/done"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>