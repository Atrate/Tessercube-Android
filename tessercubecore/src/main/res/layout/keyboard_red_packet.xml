<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/next_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/mode_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode: Red Packet"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next_button">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Amount" />

            <EditText
                android:id="@+id/amount_input"
                android:inputType="numberDecimal"
                android:layout_margin="4dp"
                app:layout_columnWeight="1" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Split" />

            <RadioGroup app:layout_columnWeight="1">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Average" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Random" />
            </RadioGroup>

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Shares" />

            <FrameLayout app:layout_columnWeight="1">

                <EditText
                    android:id="@+id/shares_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:inputType="number"
                    android:digits="0123456789"/>
            </FrameLayout>

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_margin="8dp"
                android:text="Wallet" />

            <RadioGroup app:layout_columnWeight="1">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Average" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Random" />
            </RadioGroup>

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>
    <FrameLayout
        android:elevation="4dp"
        android:id="@+id/mode_selection_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        tools:visibility="visible">

        <include
            layout="@layout/layout_keyboard_mode_selection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/next_button" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>